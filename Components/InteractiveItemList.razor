@typeparam T

<MudPaper MinWidth="@($"{Width}px")">
    <MudText>@Title</MudText>

    <MudList T="T">
        @foreach (var item in Items)
        {
            <MudListItem OnClick="() => OnEdit.InvokeAsync(item)">
                <MudButton OnClick="() => OnDelete.InvokeAsync(item)">
                    <MudIcon icon="@Icons.Material.Filled.Delete" Color="Color.Error" />
                </MudButton>
                @ItemText(item)
            </MudListItem>
        }

        <MudListItem OnClick="OnReset">Reset edit</MudListItem>
    </MudList>
</MudPaper>

@code {
    [Parameter] public string Title { get; set; }
    [Parameter] public int Width { get; set; }

    [Parameter] public IEnumerable<T> Items { get; set; }
    [Parameter] public Func<T, string> ItemText { get; set; }

    [Parameter] public EventCallback<T> OnEdit { get; set; }
    [Parameter] public EventCallback<T> OnDelete { get; set; }
    [Parameter] public EventCallback OnReset { get; set; }
}